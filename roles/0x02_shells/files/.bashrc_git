## BASICS ###################################################################################################
#https://stackoverflow.com/a/15702135/805284
gitignore() {
	if [[ $# == 0 ]]
        then
			vim .gitignore
			git add .gitignore
			git commit -v -m gi
			git status -s
		else
			for i
			in "$@"
			do
				echo "$i" >>.gitignore
				git rm --cached -r "$i"
			done
			cat .gitignore  ##fixme remove when testing is done
			git add .gitignore
			git commit -v -m .gitignore
			git status -s
		fi
}
alias gi="gitignore"

