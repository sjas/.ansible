alias grem="git remote -v"								## show remotes
alias grema="git remote add"							## add remote
alias gremd="git remote remove"							## remove remote

gitfetch() {
	if [[ $# == 0 ]]
	then
		git fetch origin master
	elif [[ $# == 2 ]]
	then
		git fetch "$@"
	else
		echo "only specify tracked repo and branch"
	fi
}
alias gf=gitfetch
gitfetchall() {
	for branch in $(git branch -r | grep -v ' -> '| cut -d'/' -f2); do git checkout "${branch}"; git fetch; done
}
alias gfa=gitfetchall
gitpull() {
	if [[ $# == 0 ]]
	then
		git pull origin master
	elif [[ $# == 2 ]]
	then
		git pull "$@"
	else
		echo "only specify tracked repo and branch"
	fi
}
alias gp=gitpull
gitpush() {
	if [[ $# == 0 ]]
	then
		git push origin master --follow-tags
	elif [[ $# == 2 ]]
	then
		git push "$@" --follow-tags
	else
		echo "only specify tracked repo and branch"
	fi
}
alias gpp=gitpush
gitpushandpull() {
	if [[ $# == 0 ]]
	then
		git pull origin master
		echo
		git push origin master --follow-tags
	elif [[ $# == 2 ]]
	then
		git pull "$@"
		echo
		git push "$@"
	else
		echo "only specify tracked repo and branch"
	fi
}
alias gpup=gitpushandpull

