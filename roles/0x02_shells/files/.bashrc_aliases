# hex2dec and dec2hex
# shellcheck disable=SC2059
xd() {
    printf "hex> "
    while read -r i
    do
        printf "dec  $(( 0x${i} ))\n\nhex> "
    done
}
dx() {
    printf "dec> "
    while read -r i
    do
        printf 'hex  %x\n\ndec> ' "$i"
    done
}





